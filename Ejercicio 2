#include <stdio.h>

int main() {
    int i, num = 100, sum = 0;

    printf("Suma de los cuadrados de los primeros 100 numeros:\n");

    for (i = 1; i <= num; i++) {
        int pot = i * i;
        printf("%d\n", pot);
        sum = sum + pot;
    }

    printf("La suma de los cuadrados de los primeros 100 numeros es: %d\n", sum);

    return 0;
}
